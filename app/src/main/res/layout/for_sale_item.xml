<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/image"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:padding="12dp"
        android:src="@drawable/sample1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/fs_title_1"
        android:textSize="16dp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="@id/image"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fs_address_1"
        android:textSize="14dp"
        android:textColor="#7C7C7C"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,000ì›"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@id/desc"/>
    <TextView
        android:id="@+id/likes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="16dp"
        android:textColor="#7C7C7C"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/likes_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toStartOf="@id/likes_count"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/chat_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="16dp"
        android:textColor="#7C7C7C"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="6dp"
        app:layout_constraintEnd_toStartOf="@id/likes_icon"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toStartOf="@id/chat_count"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>